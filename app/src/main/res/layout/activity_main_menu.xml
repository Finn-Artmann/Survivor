<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="space_survivor.activities.MainMenuActivity" tools:visibility="visible">

        <Button
                android:id="@+id/play_button"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/play_button"
                android:textSize="22sp"
                android:layout_width="170dp"
                android:layout_height="51dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="392dp"
                style="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:backgroundTint="@color/purple_700" android:alpha="?android:attr/primaryContentAlpha"
                android:textColor="#FFFFFF"/>

        <Button
                android:id="@+id/scoreboard_button"
                android:layout_width="170dp"
                android:layout_height="51dp"
                android:layout_marginTop="24dp"
                android:text="@string/scoreboard_button"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/play_button"
                tools:ignore="MissingConstraints"
                style="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:backgroundTint="@color/purple_700" android:alpha="?android:attr/primaryContentAlpha"
                android:textColor="#FFFFFF"/>

        <Button
                android:id="@+id/login_button"
                android:layout_width="170dp"
                android:layout_height="51dp"
                android:layout_marginTop="24dp"
                android:text="@string/login_button"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreboard_button"
                tools:ignore="MissingConstraints"
                style="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:backgroundTint="@color/purple_700" android:alpha="?android:attr/primaryContentAlpha"
                android:textColor="#FFFFFF"/>
        <Button
                android:id="@+id/logout_button"
                android:layout_width="170dp"
                android:layout_height="51dp"
                android:layout_marginTop="24dp"
                android:text="Logout"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreboard_button"
                tools:ignore="MissingConstraints"
                style="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:backgroundTint="@color/purple_700" android:alpha="?android:attr/primaryContentAlpha"
                android:textColor="#FFFFFF"/>


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/survivor_bg" android:id="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:scaleX="1.3" android:scaleY="1.3"/>

        <TextView
            android:id="@+id/username_text"
            android:layout_width="360dp"
            android:layout_height="24dp"
            android:layout_marginTop="100dp"
            android:autoSizeTextType="none"
            android:text="@string/signed_in_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logout_button"
            tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>